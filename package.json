{
  "name": "sacredconnect-backend",
  "version": "1.0.0",
  "description": "Comprehensive backend API for SacredConnect - A spiritual connection platform connecting users with places of worship worldwide",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.json dist/",
    "docker:build": "docker build -t sacredconnect-backend .",
    "docker:run": "docker run -p 5000:5000 sacredconnect-backend",
    "seed": "ts-node scripts/seed.ts",
    "migrate": "ts-node scripts/migrate.ts",
    "db:reset": "ts-node scripts/resetDatabase.ts"
  },
  "keywords": [
    "spiritual",
    "religious",
    "temple",
    "church",
    "mosque",
    "prayer",
    "donation",
    "live-streaming",
    "community",
    "marketplace",
    "booking",
    "travel",
    "nodejs",
    "express",
    "mongodb",
    "typescript",
    "rest-api"
  ],
  "author": "SacredConnect Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sacredconnect/backend.git"
  },
  "bugs": {
    "url": "https://github.com/sacredconnect/backend/issues"
  },
  "homepage": "https://sacredconnect.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "socket.io": "^4.7.4",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "firebase-admin": "^12.0.0",
    "nodemailer": "^6.9.7",
    "stripe": "^14.9.0",
    "razorpay": "^2.9.2",
    "node-cron": "^3.0.3",
    "moment": "^2.29.4",
    "timezone": "^1.0.23",
    "uuid": "^9.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,json",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node src/server.ts"
  }
}