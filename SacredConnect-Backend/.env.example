# ========================================
# SacredConnect Backend Configuration
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/sacredconnect
MONGO_OPTIONS_USE_NEW_URL_PARSER=true
MONGO_OPTIONS_USE_UNIFIED_TOPOLOGY=true

# Database Connection Pool
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_CONNECT_TIMEOUT_MS=30000
MONGO_SOCKET_TIMEOUT_MS=30000

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_ON_FAILURE=100

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8081
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# Cloudinary Configuration
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_FOLDER=sacredconnect

# Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
MAX_FILES_COUNT=5

# ========================================
# EMAIL CONFIGURATION
# ========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Settings
EMAIL_FROM_NAME=SacredConnect
EMAIL_FROM_ADDRESS=noreply@sacredconnect.com
EMAIL_REPLY_TO=support@sacredconnect.com

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Firebase Admin SDK
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key content\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40your-project.iam.gserviceaccount.com

# ========================================
# PAYMENT GATEWAY CONFIGURATION
# ========================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Razorpay Configuration (for Indian market)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ========================================
# THIRD-PARTY APIS
# ========================================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 (alternative file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=sacredconnect-bucket

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
CRYPTO_ALGORITHM=aes-256-gcm

# Password Hashing
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# ========================================
# ANALYTICS & MONITORING
# ========================================
# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXX-X

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=SacredConnect-Backend

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Log Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# External Logging
LOGGLY_TOKEN=your_loggly_token
LOGGLY_SUBDOMAIN=your_subdomain

# ========================================
# SOCIAL MEDIA INTEGRATION
# ========================================
# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twitter
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# ========================================
# BACKGROUND JOBS
# ========================================
# Bull Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1

# Job Processing
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:8081
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_UPGRADE_TIMEOUT=10000
SOCKET_IO_PING_TIMEOUT=5000
SOCKET_IO_PING_INTERVAL=25000

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_SWAGGER_DOCS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_FEATURES=true

# ========================================
# EXTERNAL SERVICE TIMEOUTS
# ========================================
HTTP_TIMEOUT=30000
DATABASE_TIMEOUT=10000
REDIS_TIMEOUT=5000
EMAIL_TIMEOUT=15000

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# ========================================
# API VERSIONING
# ========================================
API_VERSION=v1
API_PREFIX=/api

# ========================================
# DEVELOPMENT SPECIFIC
# ========================================
# Set to true for development mode features
DEVELOPMENT_MODE=true
DEBUG_SQL_QUERIES=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false

# ========================================
# PRODUCTION SPECIFIC
# ========================================
# Only used in production
CLUSTER_MODE=false
CLUSTER_WORKERS=0
CLUSTER_MAX_MEMORY=512

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=sacredconnect-backups

# ========================================
# INTERNATIONALIZATION
# ========================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,es,fr,de,ar,zh,ja,pt,ru
TIMEZONE=UTC

# ========================================
# COMPLIANCE & PRIVACY
# ========================================
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
COOKIE_CONSENT_REQUIRED=true
PRIVACY_POLICY_VERSION=1.0
TERMS_OF_SERVICE_VERSION=1.0